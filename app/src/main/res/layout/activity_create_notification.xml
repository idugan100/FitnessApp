<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CreateNotification">
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GO BACK"
        style="@style/AppButton"
        android:backgroundTint="@color/notificationRed"
        android:onClick="backToAdmin"
        />
    <EditText
        android:id="@+id/notifBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/notif_hint"
        android:layout_margin="10dp"
        android:inputType="text" />

    <!-- Buttons with modified AppButton style for admin functionalities -->
    <Button
        style="@style/AppButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:text="Send Notification"
        android:onClick="inputNotification"/>

</LinearLayout>